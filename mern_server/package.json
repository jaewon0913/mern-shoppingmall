{
  "name": "mern_server",
  "version": "1.0.0",
  "scripts": {
    "start": "yarn start",
    "heroku-postbuild": "cd ../mern_client && yarn install && yarn build",
    "client": "cd ../mern_client && yarn start",
    "server": "nodemon Server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\""
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mysql": "^2.18.1",
    "nodemon": "^2.0.3",
    "yarn": "^1.22.4"
  },
  "devDependencies": {
    "concurrently": "^5.2.0"
  }
}
